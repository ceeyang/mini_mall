{
  "name": "mini-mall-backend",
  "version": "1.0.0",
  "description": "Mini Mall 后端服务",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "jsdoc -c jsdoc.json && serve docs/api",
    "check": "npm run lint && npm run format:check",
    "db:init": "node database/init-db.js",
    "db:init:force": "node database/init-db.js --force",
    "docker:build": "docker build -t mini-mall-backend:latest .",
    "docker:run": "docker run -d --name mini-mall-backend -p 7891:7891 --env-file .env --restart unless-stopped mini-mall-backend:latest",
    "docker:stop": "docker stop mini-mall-backend && docker rm mini-mall-backend",
    "docker:tag": "docker tag mini-mall-backend:latest ceeyang/mini-mall-backend:latest",
    "docker:push": "docker push ceeyang/mini-mall-backend:latest",
    "docker:save": "docker save mini-mall-backend:latest | gzip > mini-mall-backend.tar.gz && echo '镜像已导出为 mini-mall-backend.tar.gz'",
    "docker:load": "echo 'Usage: gunzip -c mini-mall-backend.tar.gz | docker load'"
  },
  "keywords": [
    "ecommerce",
    "mall",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "express-validator": "^7.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "prettier": "^3.2.5",
    "jsdoc": "^4.0.2",
    "docdash": "^1.2.0",
    "serve": "^14.2.1"
  }
}
